<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Roll Number</th>
      <th>Name</th>
      <th>Age</th>
      <th>Marks1</th>
      <th>Marks2</th>
      <th>Marks3</th>
      <th>Total</th>
      <th>Student class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <% 
      total = 0
      student = @students[3]                                  # Randomly assigned first student
      @students.each do |check|
          temp_total = check.marks1 + check.marks2 + check.marks3
          if temp_total > total 
              total = temp_total
              student = check
          end
      end
    %>
      <tr>
        <th><%= student.rollnumber %></th>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.marks1 %></td>
        <td><%= student.marks2 %></td>
        <td><%= student.marks3 %></td>
        <td><%= student.marks1 + student.marks2 + student.marks3 %></td>
        <td><%= student.student_class.class_number %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

<br>

